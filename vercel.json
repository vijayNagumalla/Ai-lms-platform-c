{
  "version": 2,
  "installCommand": "npm install --ignore-scripts && cd backend && npm install --ignore-scripts && cd ..",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "backend/**"
    }
  }
}
