# Frontend Environment Variables
# For local development:
VITE_API_URL=http://localhost:5000/api
# For production deployment (use relative path or full URL):
# VITE_API_URL=/api
# OR
# VITE_API_URL=https://your-api-domain.com/api

# WebSocket URL (optional - will be derived from VITE_API_URL if not set)
# VITE_WS_URL=ws://localhost:5000
# OR for production:
# VITE_WS_URL=wss://your-api-domain.com

VITE_RAPIDAPI_KEY=your_rapidapi_key_here

# Backend Environment Variables
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ai_lms_platform
DB_PORT=3306

JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

PORT=5000
NODE_ENV=development

# Proxy Configuration (for deployments behind reverse proxy/load balancer)
# Set to '1' or 'true' to trust the first proxy (required for Vercel, nginx, etc.)
# This is required for express-rate-limit to correctly identify client IPs
# Auto-enabled in production unless explicitly set to 'false'
TRUST_PROXY=1

# App Configuration
VITE_APP_NAME=LMS Platform
VITE_APP_VERSION=1.0.0 

# Gemini AI (Backend)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-flash-latest
GEMINI_TEMPERATURE=0.35
GEMINI_MAX_OUTPUT_TOKENS=1024